        { "choice": "Text" },
        { "choice": "MultilineText" },
        { "choice": "WholeNumber"},
        { "choice": "Decimal"},
        { "choice": "Float" },
        { "choice": "Currency"},
        { "choice": "DateTime" },
        { "choice": "Lookup"}
      ]
    },
    "FormId": { 
      "type": "parameter",
      "datatype": "string",
      "isRequired": true, 
      "defaultValue": "",
      "replaces": "formguididexample",
      "description": "Enter form Id" 
    },
    "FormType": { 
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true, 
      "replaces": "formtypeexample",
      "choices": [
        { "choice": "main" },
        { "choice": "quick" }
      ],
      "description": "Select a form type" 
    },
