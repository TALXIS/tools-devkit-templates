    "RowId": {
      "type": "generated",
      "generator": "guid",
      "dataType": "string",
      "replaces": "idexample"
    },
    "LabelId": {
      "type": "generated",
      "generator": "guid",
      "dataType": "string",
      "replaces": "labelidexample"
    },
    "PublisherPrefix": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "examplepublisherprefix",
      "fileRename": "examplepublisherprefix",
      "isRequired": true
    },
    "LogicalName": {
      "displayName": "Logical name (without publisher prefix)",
      "type": "parameter",
      "datatype": "text",
      "replaces": "examplecustomerow",
      "isRequired": true
    },
    "DisplayName": {
      "type": "parameter",
      "datatype": "text",
