  "sourceName": "examplecustomentityattribute",
  "preferNameDirectory": false,
  "symbols": {
    "EntitySchemaName": {
			"type": "parameter",
			"datatype": "text",
      "replaces": "exampleentityname",
      "isRequired": true
		},
    "SolutionRootPath": {
			"type": "parameter",
			"datatype": "text",
			"replaces": "SolutionDeclarationsRoot",
      "isRequired": true
		},
    "AttributeType": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Select attribute type",
