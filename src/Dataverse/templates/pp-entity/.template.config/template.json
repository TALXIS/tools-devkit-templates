{
	"$schema": "http://json.schemastore.org/template",
	"author": "NETWORG",
	"identity": "TALXIS.DevKit.Templates.Dataverse.Entity",
	"name": "Power Platform: Entity",
	"shortName": "pp-entity",
	"description": "Defines the database schema for a business object - its attributes (columns), keys and indexes—stores its records (rows), includes the forms, views and charts that display the data, supports binding of validations, rules, workflows and plug-ins that run in the object’s context, and applies role-based security that controls behavior and access across apps and environments.",
	"tags": {
		"language": "XML",
		"type": "item"
	},
	"sourceName": "examplecustomentity",
	"sources": [
		{
			"modifiers": [
				{
					"condition": "(Behavior == \"New\")",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{customViewId}.xml"
					]
				},
				{
					"condition": "(Behavior == \"Existing\")",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{defaultViewId}.xml",
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{quickFindViewId}.xml",
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{myRecordsViewId}.xml",
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{lookupViewId}.xml",
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{advancedFindViewId}.xml",
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{associatedViewId}.xml"
					]
				},
				{
					"condition": "(!AddMainForm)",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/FormXml/main/*"
					]
				},
				{
					"condition": "(!AddQuickForm)",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/FormXml/quick/*"
					]
				},
				{
					"condition": "(!AddCardForm)",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/FormXml/card/*"
					]
				},
				{
					"condition": "(!AddQuickCreateForm)",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/FormXml/quickCreate/*"
					]
				},
				{
					"condition": "(!AddCustomView)",
					"exclude": [
						"SolutionDeclarationsRoot/Entities/examplepublisherprefix_examplecustomentity/SavedQueries/{customViewId}.xml"
					]
				}
			]
		}
	],
	"preferNameDirectory": false,
	"symbols": {
		//this was supposed to be done using msbuild props binding but it didn't work for some reason
		"SolutionRootPath": {
			"type": "parameter",
			"datatype": "text",
			"defaultValue": ".",
			"replaces": "SolutionDeclarationsRoot",
			"fileRename": "SolutionDeclarationsRoot",
			"description": "Folder under the project folder where solution components will be placed. Use the folder name only, not the full path. Use '.' if you want to place components directly in the project folder."
		},
		"IsSystemEntity": {
			"type": "parameter",
			"description": "Enter true if the entity is a system entity. System entities are predefined entities that are deployed on all environments out of box. You can only modify system entities and you can't introduce new one.",
			"datatype": "bool",
			"defaultValue": false
		},
		"EntityType": {
			"type": "parameter",
			"description": "There are two types of entities: Standard and Activity. Standard entities are used to store data, while Activity entities are used to track events such as emails, appointments and tasks.",
			"datatype": "choice",
			"choices": [
				{
					"choice": "Standard"
				},
				{
					"choice": "Activity"
				}
			],
			"defaultValue": "Standard"
		},
		"Behavior": {
			"type": "parameter",
			"description": "Select how the entity will be added to the solution. New entities will have all their metadata included, while existing entities will be just referenced.",
			"datatype": "choice",
			"choices": [
				{
					"choice": "New",
					"displayName": "Include metadata",
					"description": "When creating a new entity the default attributes, forms and views must be generated. You can't create a new system entity"
				},
				{
					"choice": "Existing",
					"displayName": "Existing entity reference",
					"description": "Use if you want to add new attributes, forms or views to an existing entity from a different solution"
				}
			],
			"isRequired": true
		},
		"BehaviorType": {
			"type": "generated",
			"generator": "switch",
			"datatype": "int",
			"replaces": "behaviorType",
			"parameters": {
				"cases": [
					{
						"condition": "(Behavior == 'New' && !IsSystemEntity)",
						"value": 0
					},
					{
						"condition": "(Behavior == 'Existing')",
						"value": 2
					},
					{
						"value": 2 // default
					}
				]
			}
		},
		"SystemPublisherPrefix": {
			"type": "generated",
			"isEnabled": "(IsSystemEntity == true)",
			"generator": "switch", // for some reason constant doesn't respect isEnabled
			"parameters": {
				"cases": [
					{
						"condition": "(IsSystemEntity)",
						"value": ""
					},
					{
						"condition": "(!IsSystemEntity)",
						"value": "examplepublisherprefix_"
					}
				]
			},
			"replaces": "examplepublisherprefix_",
			"fileRename": "examplepublisherprefix_"
		},
		"PublisherPrefix": {
			"type": "parameter",
			"description": "Use the same publisher prefix as defined in Other/Solution.xml of the solution where this entity is first introduced to the system.",
			"datatype": "text",
			"replaces": "examplepublisherprefix",
			"fileRename": "examplepublisherprefix",
			"isRequired": "(IsSystemEntity == false)",
			"isEnabled": "(IsSystemEntity == false)"
		},
		"LogicalName": {
			"displayName": "Logical name (without publisher prefix)",
			"description": "All lower-case version of the schema name. For example, salesorder",
			"type": "parameter",
			"datatype": "text",
			"replaces": "examplecustomentity",
			"fileRename": "examplecustomentity",
			"isRequired": true
		},
		"LogicalNamePlural": {
			"displayName": "Logical name in the plural form (entity set name) (without publisher prefix)",
			"description": "All lower-case version of the collection schema name. For example, salesorders",
			"type": "parameter",
			"datatype": "text",
			"replaces": "examplecustomentities",
			"isRequired": "Behavior == \"New\""
		},
		"DisplayName": {
			"type": "parameter",
			"description": "Human-readable name. For example, Sales Order",
			"datatype": "text",
			"defaultValue": "ExampleEntityDisplayName",
			"replaces": "ExampleEntityDisplayName",
			"isRequired": true
		},
		"DisplayNamePlural": {
			"type": "parameter",
			"description": "Human-readable name in the plural form. For example, Sales Orders",
			"datatype": "text",
			"replaces": "ExampleEntityPluralDisplayName",
			"isRequired": "(Behavior == \"New\")"
		},
		"IsOrganizationTypeEntity": {
			"type": "parameter",
			"displayName": "Is Organization Value Entity?",
			"description": "If true, the entity is considered an organization value entity which means row level access control will not be configurable.",
			"datatype": "bool",
			"description": "Enter true if records are owned by organisation. (False = Owned by User/Team/User(Default) & True = Owned by Organisation)",
			"defaultValue": "false"
		},
		"AddMainForm": {
			"type": "computed",
			"value": "(Behavior == \"New\")",
			"displayName": "Add Main Form",
			"datatype": "bool"
		},
		"AddQuickCreateForm": {
			"type": "parameter",
			"displayName": "Add Quick Create Form",
			"datatype": "bool",
			"description": "Do you want to generate a quick create form?",
			"defaultValue": "false"
		},
		"AddQuickForm": {
			"type": "computed",
			"value": "(Behavior == \"New\")",
			"displayName": "Add Quick View Form",
			"datatype": "bool"
		},
		"AddCardForm": {
